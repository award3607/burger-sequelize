<div class="container">
	<div class="jumbotron">
		<div class="row text-center">
			<div class="col-md-4">
				<img class="jumbo-img img-responsive img-rounded" src="/assets/img/happy-cheeseburger_200.png" />
			</div>
			<div class="col-md-4">
				<h1>Eat the Burger</h1>
			</div>
			<div class="col-md-4">
				<img class="jumbo-img img-responsive img-rounded" src="/assets/img/happy-cheeseburger_200.png" />
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-6">
			<h2>Menu</h2>
			<ol>
				{{#each burgers}}
					{{#unless devoured}}
						<div class="row">
							<div class="col-md-6">
								<li>
									<p>
										{{burger_name}}
									</p>
								</li>
							</div>
							<div class="col-md-6">
								<p>
									<button class="btn btn-primary devour-btn" data-id="{{id}}">
										<span class="glyphicon glyphicon-cutlery"></span> Devour!
									</button>
								</p>
							</div>
						</div>
					{{/unless}}
				{{/each}}
			</ol>
		</div>
		<div class="col-md-6">
			<h2>Devoured</h2>
			<ol>
				{{#each burgers}}
					{{#if devoured}}
						<div class="row">
							<div class="col-md-6">
								<li>
									<p>
										{{burger_name}}
									</p>
								</li>
							</div>
							<div class="col-md-6">
								<p>
									<button class="btn disabled" data-id="{{id}}">
										<span class="glyphicon glyphicon-cutlery"></span> Devoured
									</button>
								</p>
							</div>
						</div>
					{{/if}}
				{{/each}}
			</ol>
		</div>
	</div>
	<div class="row">
		<div class="well col-md-6 col-md-offset-3">
			<h2>Add a burger to the menu</h2>
			<form class="create-form">
				<div class="form-group">
					<label for="new-burger">Burger name: </label>
					<input class="form-control" type="text" id="new-burger" name="new-burger" />
				</div>
				<button class="btn btn-primary" id="add-burger">
					<span class="glyphicon glyphicon-plus"></span> Add burger
				</button>
			</form>
		</div>
	</div>
</div>